{
  "name": "Manager Agent",
  "version": "1.0.0",
  "description": "Multi-Agent System Manager Agent - Greets user and delegates tasks to Analyst Agent",
  "type": "agent",
  "capabilities": [
    "user_greeting",
    "task_reception",
    "task_delegation_to_analyst",
    "workflow_initiation",
    "file_reading",
    "log_analysis",
    "system_monitoring"
  ],
  "configuration": {
    "max_concurrent_tasks": 10,
    "timeout": 30000,
    "retry_attempts": 3,
    "log_level": "info"
  },
  "dependencies": ["analyst_agent"],
  "api_endpoints": {
    "health_check": "/health",
    "task_status": "/tasks/:id",
    "agent_status": "/agents/:id",
    "delegate_task": "/delegate",
    "get_metrics": "/metrics",
    "read_agent_log": "/shared-logs/manager-agent.log",
    "read_system_log": "/shared-logs/system.log",
    "read_main_context": "/main.context7.json",
    "write_agent_log": "/shared-logs/manager-agent.log",
    "write_system_log": "/shared-logs/system.log"
  },
  "workflow": {
    "user_interaction": {
      "greeting_message": "Merhaba! Multi-Agent Sistemine hoş geldiniz. Görevinizi alıyorum ve analist ajanımıza aktarıyorum.",
      "task_confirmation": true,
      "delegation_notification": true
    },
    "task_delegation": {
      "template_creation": true,
      "analyst_transfer": true,
      "status_tracking": true
    },
    "file_operations": {
      "read_logs": {
        "agent_log": "shared/logs/manager-agent.log",
        "system_log": "shared/logs/system.log",
        "main_context": "main.context7.json"
      },
      "context_awareness": {
        "read_project_story": true,
        "read_system_status": true,
        "read_agent_status": true
      }
    }
  },
  "monitoring": {
    "metrics": [
      "task_completion_rate",
      "average_response_time",
      "error_rate",
      "agent_utilization"
    ],
    "alerts": ["high_error_rate", "slow_response_time", "agent_failure"]
  },
  "security": {
    "authentication": "jwt",
    "authorization": "role_based",
    "encryption": "aes_256",
    "audit_logging": true
  }
}
